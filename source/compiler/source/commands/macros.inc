; ************************************************************************************************
;
;							Size independent write keyword as constant
;
; ************************************************************************************************

keyword .macro
		.if (\1) > 255
		lda 	#(\1) >> 8
		jsr 	WriteCodeByte
		.endif
		lda 	#(\1) & $FF
		jsr 	WriteCodeByte
		.endm


